@import variables
@import photoStripe
@import navbar

body
  font-size: 18px
  line-height: 140%
  font-family: font-family-sans;
  background: om-butter
  -webkit-font-smoothing: antialiased !important
  -moz-osx-font-smoothing: grayscale !important

.content
  margin-top: 15px
  padding: 15px
  background-color: white

[role="page-container"]
  padding-top: 50px
  overflow: hidden
  @media (max-width: 767px)
    background: om-butter

.home-page
  .social
    position: absolute
  [role="page-container"]
    padding-top: 0px

#photo-container
  width: 100%
  .photo-preview
    position: relative
    display: block
    width: 25%
    padding: 5px
    .photo-preview-info
      position: relative
    img
      width: 100%
      height: 100%
      box-shadow: 0px 0px 27px 0px rgba(50, 50, 50, 0.48);
    .overlay
      transition: all .2s ease-in-out
      width: 100%
      height: 100%
      background-color: rgba(0,0,0,0.3)
      position: absolute
      top: 0
      left: 0
      text-decoration: none
      color: #fff
      display: none
      .photo-info
        position: absolute
        bottom: 0
        left: 0
        // background-color: rgba(0,0,0,0.80)
        width: 100%
        padding: 5px
    &:hover .overlay
      display: block
    &.not-hovered
      opacity: 0.5
    &.hovered
      z-index: 90
      transform: scale(1.3)
      transition-duration: .2s
      .photo-info
        // height: 20%
        background-color: transparent
  @media (max-width: 1199px)
    .photo-preview
      width: 48%
  @media (max-width: 767px)
    .photo-preview
      width: 100%
li.active a
  color: red
