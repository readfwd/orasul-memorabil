[role="navigation"]
  .container
    margin-right: 0
    padding-right: 0


nav.navbar
  background: om-dark
  position: fixed
  top: 0
  z-index: 100
  width: 100%
  font-size: 0.9em

  .navbar-header
    .logo-big
      position: absolute
      top: 40px
      left: 50px
      img
        height: 7em

    .om-logo
      img
        position: absolute
        height: 2em !important
        top: 50%
        transform: translateY(-50%)
    @media (max-width: 991px)
      .om-logo
        img
          top: 10%
          transform: translateY(-5%)

  nav.navbar #navbar-collapse-menu .dropdown-menu>li,
  nav.navbar #navbar-collapse-menu .dropdown-menu>li>a,
  nav.navbar #navbar-collapse-menu ul.navbar-nav>li,
  nav.navbar #navbar-collapse-menu ul.navbar-nav>li>a
    color: white
    cursor: pointer
    background: om-dark
    &:hover
      background: om-butter
      color: om-dark

  // a.navbar-brand:hover
  //   background-color: transparent !important

.home-page
  nav.navbar
    background: transparent

  nav.navbar #navbar-collapse-menu .dropdown-menu>li,
  nav.navbar #navbar-collapse-menu .dropdown-menu>li>a,
  nav.navbar #navbar-collapse-menu ul.navbar-nav>li,
  nav.navbar #navbar-collapse-menu ul.navbar-nav>li>a
    color: white
    cursor: pointer
    background: rgba(0,0,0,0.30);
    a
      border-bottom: 3px solid transparent
      &:hover
        background: inherit
        color: white
        border-bottom: 3px solid white

    .dropdown-menu
      background: rgba(0,0,0,0.50);
      li, li>a
        background: none
      li:hover
        border: none
      a
        border-bottom: 3px solid transparent
      a:hover
        border-bottom: 3px solid white

  // .dropdown-menu > li > a
  //   color: white

  // .navbar-dimmed
  //   background: om-dark;

  @media(max-width: 992px)
    // .navbar, .dropdown-menu
    //   background: om-dark
  .logo
    .white
      display: block
    .black
      display: none
.logo-small
  position: relative
  padding: 15px
  top: 0
  left: 0
  height: 3em
  img
    position: absolute
    top: 50%
    height: 80%
    transform: translateY(-50%)
  span
    margin-left: 3.4em
